---
import { LineChart } from '../Chart';

const chartData = [
  { month: 'Jan', budget: 4000, spent: 3000 },
  { month: 'Feb', budget: 5000, spent: 4500 },
  { month: 'Mar', budget: 6000, spent: 5500 },
  { month: 'Apr', budget: 4500, spent: 4000 },
];
---

<div class="bg-white rounded-lg shadow p-6">
  <h3 class="text-lg font-medium text-gray-900 mb-4">Campaign Budget Overview</h3>
  <div class="h-80">
    <LineChart data={chartData} client:load />
  </div>
</div>