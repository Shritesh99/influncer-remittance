---
import { Icon } from 'astro-icon/components'

const campaigns = [
  {
    id: 1,
    title: "Summer Product Launch",
    organization: "Tech Giants Inc.",
    budget: "3000-5000",
    platform: "Instagram",
    deadline: "2024-07-30"
  },
  {
    id: 2,
    title: "Lifestyle Collection",
    organization: "Fashion Brand",
    budget: "2000-3500",
    platform: "TikTok",
    deadline: "2024-08-15"
  }
];
---

<div class="bg-white rounded-lg shadow">
  <div class="p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Available Campaigns</h3>
    <div class="space-y-4">
      {campaigns.map((campaign) => (
        <div class="border rounded-lg p-4 hover:border-blue-500 cursor-pointer">
          <div class="flex justify-between items-start">
            <div>
              <h4 class="font-medium text-gray-900">{campaign.title}</h4>
              <p class="text-sm text-gray-500 mt-1">
                {campaign.organization} • {campaign.platform}
              </p>
            </div>
            <span class="px-2.5 py-0.5 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
              {campaign.budget} USDC
            </span>
          </div>
          <div class="mt-2 text-sm text-gray-500">
            <Icon name="mdi:calendar" class="h-4 w-4 inline mr-1" />
            Apply before: {campaign.deadline}
          </div>
        </div>
      ))}
    </div>
    <div class="mt-4">
      <a href="/influencer/available-campaigns" class="text-blue-600 hover:text-blue-700 text-sm font-medium">
        Browse all campaigns →
      </a>
    </div>
  </div>
</div>