---
const payments = [
  {
    id: 1,
    campaign: "Spring Collection",
    amount: 2500,
    status: "completed",
    date: "2024-05-01",
    currency: "USD"
  },
  {
    id: 2,
    campaign: "Tech Launch",
    amount: 1800,
    status: "processing",
    date: "2024-05-15",
    currency: "EUR"
  }
];
---

<div class="bg-white rounded-lg shadow">
  <div class="p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Payment History</h3>
    <div class="space-y-4">
      {payments.map((payment) => (
        <div class="flex items-center justify-between p-4 border rounded-lg">
          <div>
            <p class="font-medium text-gray-900">{payment.campaign}</p>
            <p class="text-sm text-gray-500">{payment.date}</p>
          </div>
          <div class="text-right">
            <p class="font-medium text-gray-900">{payment.amount} USDC</p>
            <p class="text-sm text-gray-500">
              Withdrawal: {payment.currency}
            </p>
          </div>
        </div>
      ))}
    </div>
    <div class="mt-4">
      <button class="text-blue-600 hover:text-blue-700 text-sm font-medium">
        View all transactions â†’
      </button>
    </div>
  </div>
</div>