---
import { LineChart } from '../Chart';

const chartData = [
  { month: 'Jan', earnings: 2000 },
  { month: 'Feb', earnings: 2800 },
  { month: 'Mar', earnings: 3500 },
  { month: 'Apr', earnings: 4200 },
];
---

<div class="bg-white rounded-lg shadow p-6">
  <h3 class="text-lg font-medium text-gray-900 mb-4">Earnings Overview</h3>
  <div class="h-80">
    <LineChart data={chartData} client:load />
  </div>
</div>